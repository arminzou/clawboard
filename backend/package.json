{
  "name": "clawboard-backend",
  "version": "1.0.0",
  "description": "Backend for agent project management dashboard",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "predev": "lsof -ti :3001 | xargs kill 2>/dev/null; sleep 1; lsof -ti :3001 | xargs kill -9 2>/dev/null || true",
    "dev": "nodemon --watch . --ext ts,js,json --exec ts-node server.ts",
    "init-db": "node db/init.js",
    "sync-docs": "node utils/syncDocs.js",
    "ingest-sessions": "node utils/ingestSessions.js"
  },
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "chokidar": "^3.5.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.3",
    "@types/ws": "^8.18.1",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
