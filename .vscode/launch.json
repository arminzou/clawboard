{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Backend Dev (ts-node)",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "PORT": "3001",
        "NODE_OPTIONS": "--inspect"
      },
      "autoAttachChildProcesses": true,
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "restart": true
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Frontend Dev Server (Vite)",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/frontend",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Frontend Debug (Chrome)",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/frontend",
      "sourceMaps": true
    }
  ],
  "compounds": [
    {
      "name": "Frontend (Vite + Chrome)",
      "configurations": ["Frontend Dev Server (Vite)", "Frontend Debug (Chrome)"],
      "stopAll": true
    },
    {
      "name": "Full Stack + UI Debug",
      "configurations": ["Backend Dev (ts-node)", "Frontend Dev Server (Vite)", "Frontend Debug (Chrome)"],
      "stopAll": true
    }
  ]
}
